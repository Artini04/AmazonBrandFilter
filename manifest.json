{
  "manifest_version": 3,
  "name": "AmazonBrandFilter",
  "version": "0.1",

  "description": "Filters out all unknown brands from Amazon search results.",

  "icons": {
    "48": "icons/border-48.png"
  },
  "action": {
    "default_area": "navbar",
    "default_icon": {
     "32" : "icons/border-48.png",
     "48" : "icons/border-48.png"
    },
    "default_title": "AmazonBrandFilter"
  },
  "content_scripts": [
    {
      "matches": ["*://*.amazon.com/*"],
      "js": ["amazonbrandfilter.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_security_policy": {
    "extension_pages": "default-src 'self'"
  },

  "web_accessible_resources": [
    {
      "resources": ["brands.txt"],
      "matches":["https://raw.githubusercontent.com/chris-mosley/AmazonBrandFilterList/latest/*"]
    },
    {
      "resources": ["brands.txt", "functions.js"],
      "matches":["*://*/*"]
    }
  ]


}

